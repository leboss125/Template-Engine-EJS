<h1>TinyApp:</h1>


<% if(username) {%>
<h1>login as : <span class="text-blue"><%= username %></span></h1>
<form action="/logout" method="POST">
    <input type="submit" class="btn btn-danger" value="logout"/>
</form>
<% }else{ %>
<form action="/login" method="POST"> 
    <input type="name" name="username"/>
    <input type="submit"/>
</form>
<% } %>